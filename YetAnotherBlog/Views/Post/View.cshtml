@model YetAnotherBlog.Models.PostModel

@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Title);
}

<h2>@Html.DisplayFor(model => model.Title)</h2>

<div class="row">
    <hr />
    <div class="col-md-12">
        <div>
            @Html.DisplayFor(model => model.Post)
            <hr />

            @if (Model.Tags != null)
            {
                @Html.DisplayNameFor(model => model.Tags) <text>:</text>
                @Html.DisplayFor(model => model.Tags) <br />
            }

            Posted at: @Html.DisplayFor(model => model.TimePosted) <br />

            @if (Model.Edited == true)
            {
                <text>Last Edited:</text> @Html.DisplayFor(model => model.LastEdited) <br />
            }
        </div>
    </div>
    <div class="row">

    </div>
</div>
<div>
    @if (User.IsInRole("Admin") || User.IsInRole("Poster")) {
        <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> <text>|</text>
     }
    <a asp-action="Index">Back to List</a>
</div>
