@model YetAnotherBlog.Models.UserListViewModel

@{
    ViewData["Title"] = "User List";
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2>User List</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>
                    @user.Email
                </td>
                <td>
                    @foreach (var role in user.Roles)
                    {
                        @role
                        <span> </span>
                    }
                </td>
                <td>
                    <a asp-action="Delete" asp-route-email=@user.Email>Delete Account</a> | <a asp-action="ChangeRole" asp-route-email="@user.Email">Change Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>