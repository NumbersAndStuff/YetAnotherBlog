@model YetAnotherBlog.Models.FilesViewModel

@{
    ViewData["Title"] = "Manage Uploaded Files";
}

<h2>Manage Uploaded Files</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Type
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model.Files)
        {
            <tr>
                <td>
                    @file.Name
                </td>
                <td>
                    @file.Type
                </td>
                <td>
                    <a asp-controller="Admin" asp-action="DeleteFile" asp-route-file=@file.Name asp-route-type=@file.Type>Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>