@model YetAnotherBlog.Models.UploadViewModel

@{
    ViewData["Title"] = "Upload Content";
}

@await Html.PartialAsync("_sidebar")

<div class="col-md-8">
    <h2>Upload HTML/CSS or other static content</h2>

    <form asp-controller="Admin" asp-action="UploadPage" method="post" enctype="multipart/form-data" multiple="multiple">
        @Html.AntiForgeryToken()

        <label>Select a file to upload: </label>
        <input type="file" asp-for="File" />
        <hr>
        <button type="submit" class="btn btn-default">Upload</button>
    </form>
</div>

